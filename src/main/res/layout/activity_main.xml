<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#0F76BE"
    android:id="@+id/drawer_layout"
    tools:context=".MainActivity">


    <pl.droidsonroids.gif.GifImageView
        android:id="@+id/fridge"
        android:layout_width="wrap_content"
        android:layout_height="497dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="31dp"
        android:layout_marginEnd="30dp"
        android:layout_marginBottom="20dp"
        android:background="#2E7AB3"
        android:clickable="true"
        android:focusable="true"
        android:src="@drawable/fridge2" />

    <TextView
        android:id="@+id/titleView1"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="-2dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="0dp"
        android:text="Fridge Partner"
        android:textAlignment="center"
        android:textColor="#E2EB19"
        android:textSize="50sp"
        android:textStyle="bold"
        android:typeface="serif" />

    <TextView
        android:id="@+id/subtitleView1"
        android:layout_width="325dp"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="107dp"
        android:layout_marginEnd="43dp"
        android:text="Manage your fridge easily"
        android:textAlignment="center"
        android:textAllCaps="true"
        android:textColor="#EEA38C"
        android:textSize="20sp"
        android:textStyle="bold|italic" />

    <TextView
        android:id="@+id/textViewAc1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_centerInParent="true"
        android:layout_marginStart="56dp"
        android:layout_marginTop="472dp"
        android:text="Click and open your fridge !!"
        android:textAllCaps="true"
        android:textColor="#EEA38C"
        android:textSize="20sp"
        android:textStyle="bold|italic" />

</RelativeLayout>
